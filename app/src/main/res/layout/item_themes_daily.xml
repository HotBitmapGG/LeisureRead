<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_margin="10dp"
                                    app:cardBackgroundColor="@color/card_view_background_dark"
                                    app:cardCornerRadius="4dp"
                                    app:cardElevation="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/item_type_img"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/account_avatar"/>


        <TextView
            android:id="@+id/item_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="日常心理学"
            android:textColor="@color/font_normal"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/item_type_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/item_type_img"
            android:padding="10dp"
            android:text="日常心理学"
            android:textColor="@color/black_90"
            android:textSize="18sp"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>

